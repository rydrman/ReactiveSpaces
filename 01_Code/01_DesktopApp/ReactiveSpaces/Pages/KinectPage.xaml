      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="640"
	Title="Kinect">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Canvas Name="localCanvas" Grid.Column="0" Width="320" Height="240" Background="LightBlue"/>
        <Canvas Name="remoteCanvas" Grid.Column="1" Width="320" Height="240" Background="LightYellow"/>
    </Grid>
</Page>
